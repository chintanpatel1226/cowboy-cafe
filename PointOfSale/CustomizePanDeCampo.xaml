<UserControl x:Class="PointOfSale.CustomizePanDeCampo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="AliceBlue">
        <TextBlock FontSize="30" Foreground="Salmon" Text="Customize Pan de Campo!" TextDecorations="Underline" FontFamily="Baskerville Old Face"/>
        <TextBlock FontSize="25">Side Sizes:</TextBlock>
        <StackPanel Orientation="Vertical">
            <RadioButton Name="SmallRadioButton" FontSize="20" Tag="Small">Small</RadioButton>
            <RadioButton Name="MediumRadioButton" FontSize="20" Tag="Medium">Medium</RadioButton>
            <RadioButton Name="LargeRadioButton" FontSize="20" Tag="Large">Large</RadioButton>
        </StackPanel>
    </StackPanel>
</UserControl>
