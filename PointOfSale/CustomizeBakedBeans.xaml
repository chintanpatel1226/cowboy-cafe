<UserControl x:Class="PointOfSale.CustomizeBakedBeans"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="AliceBlue">
        <TextBlock FontSize="30" Foreground="Salmon" Text="Customize Baked Beans!" TextDecorations="Underline" FontFamily="Baskerville Old Face"/>
        <TextBlock FontSize="20">Sizes:</TextBlock>
        <StackPanel Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="{x:Type CheckBox}">
                    <Setter Property="Margin" Value="0,10,0,0"/>
                </Style>
            </StackPanel.Resources>
            <CheckBox IsChecked="{Binding Path=Bread}">
                <TextBlock FontSize="20">Small</TextBlock>
            </CheckBox>
            <CheckBox IsChecked="{Binding Path=SourCream}">
                <TextBlock FontSize="20">Medium</TextBlock>
            </CheckBox>
            <CheckBox IsChecked="{Binding Path=SourCream}">
                <TextBlock FontSize="20">Large</TextBlock>
            </CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
