<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             VerticalAlignment="Top" HorizontalAlignment="Left">
    
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Button Name="ItemSelectionButton" Height="45" Width="125">Item Selection</Button>
        <Button Name="CancelOrderButton" Height="45" Width="125" Grid.Column="1">Cancel Order</Button>
        <Button Name="CompleteOrderButton" Height="45" Width="125" Grid.Column="2">Complete Order</Button>

        <local:MenuItemSelectionControl Margin="0,70,-340,-480" Grid.ColumnSpan="3"/>
        <local:OrderSummaryControl Grid.Column="2" Margin="313,32,-428,-451"/>
    </Grid>
</UserControl>
