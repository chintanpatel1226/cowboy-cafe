<UserControl x:Class="PointOfSale.CustomizeWater"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="AliceBlue">
        <TextBlock FontSize="30" Foreground="Salmon" Text="Customize Water!" FontFamily="Baskerville Old Face"/>
        <StackPanel Orientation="Vertical">
            <Label FontSize="20">Lemon</Label>
            <CheckBox IsChecked="{Binding Path=Lemon}" VerticalAlignment="Center"/>
            <Label FontSize="20">Ice</Label>
            <CheckBox IsChecked="{Binding Path=Ice}" VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
