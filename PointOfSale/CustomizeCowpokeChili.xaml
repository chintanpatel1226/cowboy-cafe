<UserControl x:Class="PointOfSale.CustomizeCowpokeChili"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
  
  <StackPanel Background="AliceBlue">
        <TextBlock FontSize="30" Foreground="Salmon" Text="Customize Cowpoke Chili!" TextDecorations="Underline" FontFamily="Baskerville Old Face"/>
    <StackPanel Orientation="Vertical">
      <Label FontSize="20">Cheese</Label>
      <CheckBox IsChecked="{Binding Path=Cheese}" VerticalAlignment="Center"/>
      <Label FontSize="20">Sour Cream</Label>
      <CheckBox IsChecked="{Binding Path=SourCream}" VerticalAlignment="Center"/>
      <Label FontSize="20">Green Onions</Label>
      <CheckBox IsChecked="{Binding Path=GreenOnions}" VerticalAlignment="Center"/>
      <Label FontSize="20">Tortilla Strips</Label>
      <CheckBox IsChecked="{Binding Path=TortillaStrips}" VerticalAlignment="Center"/>
    </StackPanel>
  </StackPanel>
</UserControl>
